<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"

    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="@drawable/scorebackground"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical"

                    >

                    <ImageView
                        android:id="@+id/ivbatteam"
                        android:layout_marginTop="10dp"
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@drawable/bd" />

                    <TextView
                        android:id="@+id/tvbatteamname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Bangladesh"
                        android:textSize="20sp"
                        android:textColor="#26323D"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/tvbatteamscore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Score : "
                        android:textSize="15sp"
                        android:textColor="@color/whitecolor"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvbatteamover"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Over : "
                        android:textSize="15sp"
                        android:textColor="@color/whitecolor"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivbowlteam"
                        android:layout_width="120dp"
                        android:layout_marginTop="10dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@drawable/aus" />

                    <TextView
                        android:id="@+id/tvbowlteamname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Australia"
                        android:textSize="20sp"
                        android:textColor="#26323D"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvbowlteamscore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Score : "
                        android:textSize="15sp"
                        android:textColor="@color/whitecolor"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvbowlteamover"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Over : "
                        android:textSize="15sp"
                        android:textColor="@color/whitecolor"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tvtarget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Target : "
                android:textSize="15sp"
                android:textColor="@color/whitecolor"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvstatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="Bangladesh Won The Match"
                android:textSize="15sp"
                android:textColor="@color/whitecolor"
                android:textStyle="bold" />

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>